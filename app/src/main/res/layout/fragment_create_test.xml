<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.createtest.FragmentCreateTest"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtThemDeThi"
                    android:text="Thêm đề thi"
                    android:textColor="#111"
                    android:textSize="24sp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/menuCreateTest"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#EFEEFC">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imageCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/addCoverImage"
                            android:src="@drawable/icon_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>
                        <TextView
                            android:text="Thêm ảnh bìa"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#639CFD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtTieuDe"
                android:text="Tiêu đề"
                android:textSize="16sp"
                android:textColor="#111"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#858494"
                android:hint="Nhập tiêu đề bài kiểm tra"
                android:paddingLeft="24dp"
                android:paddingRight="50dp"
                android:paddingVertical="16dp"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
            <TextView
                android:id="@+id/txtTaiDeLen"
                android:text="Tải đề lên"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/googleSheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/boder_quiz">
                    <ImageView
                        android:src="@drawable/icon_sheet"
                        android:layout_width="16.67dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="7dp"/>
                    <TextView
                        android:text="Sheet"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_quiz"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="16.67dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/icon_excel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excel"
                        android:textSize="16dp" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/backgroundIntro">
                    <TextView
                        android:text="Thủ công"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/txtChonKhoa"
                android:layout_marginTop="16dp"
                android:text="Chọn Khoa"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:textColorHint="#858494"
                    android:hint="Chọn khoa,môn,..."
                    android:paddingLeft="24dp"
                    android:paddingRight="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:id="@+id/selectDepartment"
                    android:src="@drawable/down"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtChonCheDo"
                android:layout_marginTop="16dp"
                android:text="Chọn chế độ"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:textColorHint="#858494"
                    android:hint="Công khai hoặc riêng tư"
                    android:paddingLeft="24dp"
                    android:paddingRight="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:id="@+id/selectMode"
                    android:src="@drawable/down"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtThoiGianLamBai"
                android:layout_marginTop="16dp"
                android:text="Thời gian làm bài"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="16dp"
                    android:textColorHint="#858494"
                    android:hint="Nhập thời gian"
                    android:paddingLeft="24dp"
                    android:paddingRight="50dp"
                    android:paddingVertical="16dp"
                    android:background="@drawable/boder_setting_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
                <ImageView
                    android:src="@drawable/icon_time"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_width="25dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txtSoLuongCauHoi"
                android:layout_marginTop="16dp"
                android:text="Số lượng câu hỏi"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#858494"
                android:hint="Nhập số câu"
                android:paddingLeft="24dp"
                android:paddingRight="50dp"
                android:paddingVertical="16dp"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
            <TextView
                android:id="@+id/txtMoTa"
                android:layout_marginTop="16dp"
                android:text="Mô tả"
                android:textColor="#111"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="16dp"
                android:paddingVertical="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="50dp"
                android:layout_marginTop="8dp"
                android:textColorHint="#858494"
                android:hint="Nhập mô tả bài kiểm tra"
                android:background="@drawable/boder_setting_new_password"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:inputType="textMultiLine"
                android:gravity="left|top"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/boder_quiz">
                    <ImageView
                        android:id="@+id/shareTest"
                        android:src="@drawable/icon_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/createTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/backgroundIntro">
                    <TextView
                        android:text="Tạo đề thi"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/layout_bottom_share"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>