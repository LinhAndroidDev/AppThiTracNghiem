<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.profile.setting.FragmentSettingNewPassword">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="72dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backUpdateNewPassWord"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_back_black" />

                <TextView
                    android:id="@+id/txtMatKhauMoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Mật khẩu mới"
                    android:textColor="#111"
                    android:textSize="24dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Mật khẩu mới của bạn phải khác với mật khẩu đã sử dụng trước đây"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Mật khẩu"
                android:textColor="#111"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/passwordUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_setting_new_password"
                    android:hint="Nhập mật khẩu mới"
                    android:inputType="textPassword"
                    android:paddingVertical="16dp"
                    android:paddingLeft="56dp"
                    android:paddingRight="50dp"
                    android:textColorHint="#858494"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_key_password" />

                <ImageView
                    android:id="@+id/showUpdatePassWord"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/icon_hint_grey" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phải có ít nhất 8 kí tự"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="9dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_correct" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Xác nhận mật khẩu"
                android:textColor="#111"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/repeatPasswordUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boder_setting_new_password"
                    android:hint="Nhập mật khẩu mới"
                    android:inputType="textPassword"
                    android:paddingVertical="16dp"
                    android:paddingLeft="56dp"
                    android:paddingRight="50dp"
                    android:textColorHint="#858494"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/icon_key_password" />

                <ImageView
                    android:id="@+id/showRepeatUpdatePassWord"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/icon_hint_grey" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="329dp"
                app:cardBackgroundColor="@color/backgroundIntro"
                app:cardCornerRadius="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="16dp"
                    android:text="Đặt lại mật khẩu"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>