<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.profile.setting.FragmentUpdateInfor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="72dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backUpdateInfo"
                android:src="@drawable/icon_back_black"
                android:layout_width="30dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/txtCapNhatThongTin"
                android:text="Cập nhật thông tin"
                android:textSize="24dp"
                android:textColor="#111"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:text="Họ tên"
            android:textSize="14dp"
            android:textColor="#111"
            android:layout_marginTop="109dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_setting_new_password"
                android:hint="Họ tên"
                android:inputType="textEmailAddress"
                android:paddingVertical="16dp"
                android:paddingLeft="56dp"
                android:paddingRight="50dp"
                android:textColorHint="#858494"
                android:textSize="16dp"
                />
            <ImageView
                android:src="@drawable/icon_person_blue"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Năm sinh"
            android:textColor="#111"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_setting_new_password"
                android:hint="Nhập tuổi"
                android:inputType="textEmailAddress"
                android:paddingVertical="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="50dp"
                android:textColorHint="#858494"
                android:textSize="16dp"
                />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="329dp"
            app:cardBackgroundColor="@color/backgroundIntro"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:text="Đặt lại thông tin"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>