<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Fragment_Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Tạo tài khoản"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="81dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Họ tên"
            android:textSize="16dp"
            android:textColor="#111"
            android:layout_marginTop="88dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/background_edittext"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="#111"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:hint="Nhập họ tên"
            android:textColorHint="#424242"
            android:inputType="textEmailAddress"/>
        <TextView
            android:text="Email hoặc số điện thoại"
            android:textSize="16dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/background_edittext"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="#111"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:hint="Email hoặc số điện thoại"
            android:textColorHint="#424242"
            android:inputType="textEmailAddress"/>
        <TextView
            android:text="Mật khẩu"
            android:textSize="16dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <EditText
                android:id="@+id/passwordRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_edittext"
                android:hint="Mật khẩu"
                android:textColorHint="#424242"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:textColor="#111"
                android:textSize="18dp" />
            <ImageButton
                android:id="@+id/hidePasswordRegister"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_hint_grey"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <TextView
            android:text="Nhập lại mật khẩu"
            android:textSize="16dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <EditText
                android:id="@+id/passwordRegisterRepeat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_edittext"
                android:hint="Mật khẩu"
                android:textColorHint="#424242"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:textColor="#111"
                android:textSize="18dp" />
            <ImageButton
                android:id="@+id/hidePasswordRegisterRepeat"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_hint_grey"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/registerAccount"
            android:text="Đăng kí"
            android:textSize="18dp"
            android:background="@drawable/bg_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/textString"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:textColor="#111"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="33dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:text="Đã có tài khoản?"
                    android:textColor="#111"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/loginNow"
                    android:text=" Đăng nhập"
                    android:textSize="16dp"
                    android:textColor="@color/backgroundIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>