<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.Fragment_CreatePassword">

    <TextView
        android:text="Tạo mật khẩu mới"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="81dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Mật khẩu mới"
        android:textSize="16dp"
        android:textColor="#111"
        android:layout_marginTop="88dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/passwordCreate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edittext"
            android:hint="Mật khẩu mới"
            android:textColorHint="#424242"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:textColor="#111"
            android:textSize="18dp" />
        <ImageButton
            android:id="@+id/hidePasswordCreate"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_hint_grey"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>
    <TextView
        android:text="Nhập lại mật khẩu mới"
        android:textSize="16dp"
        android:textColor="#111"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/passwordRepeat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edittext"
            android:hint="Nhập lại mật khẩu mới"
            android:textColorHint="#424242"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:textColor="#111"
            android:textSize="18dp" />
        <ImageButton
            android:id="@+id/hidePasswordRepeat"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_hint_grey"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/resetPassword"
            android:text="Đặt lại mật khẩu"
            android:textSize="18dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>
</LinearLayout>